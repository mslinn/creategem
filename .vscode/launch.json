  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run bin/demo",
      "program": "${workspaceFolder}/bin/demo",
      "request": "launch",
      "type": "ruby_lsp"
    },
    {
      "name": "Run bin/build_run_demo",
      "program": "${workspaceFolder}/bin/build_run_demo",
      "request": "launch",
      "type": "ruby_lsp"
    },
    {
      "name": "Attach rdebug-ide",
      "request": "attach",
      "type": "ruby_lsp",
    },
    {
      "name": "RSpec - active spec file only",
      "program": "${workspaceFolder}/binstub/rspec -I ${workspaceFolder} ${file}",
      "request": "launch",
      "type": "ruby_lsp",
    },
    {
      "name": "RSpec - all",
      "program": "${workspaceFolder}/binstub/rspec -I ${workspaceFolder}",
      "request": "launch",
      "type": "ruby_lsp",
    }
  ]
}
